<Page
    x:Class="DSAProject.Layout.Pages.ItemPages.PlusButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid Background="Transparent" Width="26" Height="26" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="26"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="26"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border x:Name="XML_ButtonHigherValueBorder" BorderBrush="{x:Bind viewModel.BorderColor}" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="XML_ButtonHigherValue" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground="Black" Click="XML_ButtonHigherValue_Click">
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" Text="{x:Bind viewModel.Symbol}" FontSize="8" FontStretch="UltraExpanded" FontWeight="ExtraBold"></TextBlock>
            </Button>
        </Border>
    </Grid>
</Page>
