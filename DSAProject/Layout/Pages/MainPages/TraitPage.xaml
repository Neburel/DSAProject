<Page
    x:Class="DSAProject.Layout.Pages.TraitPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:other="using:DSALib.Charakter.Other"
    mc:Ignorable="d"
    Background="{x:Bind viewModel.BackgroundColor }">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <ListView Grid.Row="1" ItemsSource="{x:Bind viewModel.Traits}" Margin="0" Padding="0" ItemClick="ListView_ItemClick" IsItemClickEnabled="True">
            <ListView.HeaderTemplate>
                <DataTemplate>
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <TextBlock Grid.Column="0" TextAlignment="Center" Text="Title" Foreground="Black"></TextBlock>
                        </Border>
                        <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1">
                            <TextBlock Grid.Column="1" TextAlignment="Center" Text="GP" Foreground="Black"></TextBlock>
                        </Border>
                        <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1">
                            <TextBlock Grid.Column="2" TextAlignment="Center" Text="Value" Foreground="Black"></TextBlock>
                        </Border>
                        <Border Grid.Column="3" BorderBrush="Gray" BorderThickness="1">
                            <TextBlock Grid.Column="3" TextAlignment="Center" Text="Beschreibung" Foreground="Black"></TextBlock>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListView.HeaderTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
                    <Setter Property="VerticalAlignment" Value="Stretch"></Setter>
                    <Setter Property="HorizontalContentAlignment"  Value="Stretch"></Setter>
                    <Setter Property="VerticalContentAlignment" Value="Stretch"></Setter>
                    <Setter Property="Padding" Value="0"></Setter>
                    <Setter Property="Margin" Value="0"></Setter>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="other:Trait">
                    <Grid Margin="0" Padding="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*" MaxWidth="3000"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1">
                            <TextBlock Grid.Column="0" TextAlignment="Center" VerticalAlignment="Center" Text="{x:Bind Title}" Foreground="Black"/>
                        </Border>
                        <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1">
                            <TextBlock Grid.Column="1" TextAlignment="Center" VerticalAlignment="Center" Text="{x:Bind GP}" Foreground="Black"/>
                        </Border>
                        <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1">
                            <TextBlock Grid.Column="2" TextAlignment="Center" VerticalAlignment="Center" Text="{x:Bind Value}" Foreground="Black"/>
                        </Border>
                        <Border Grid.Column="3" BorderBrush="Gray" BorderThickness="1">
                            <TextBlock Grid.Column="3" TextAlignment="Center" VerticalAlignment="Center" Text="{x:Bind LongDescription}" TextWrapping="Wrap" Foreground="Black"/>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
    </Grid>
</Page>
