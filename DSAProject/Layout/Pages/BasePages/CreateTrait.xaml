<Page
    x:Class="DSAProject.Layout.Pages.BasePages.CreateTrait"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:DSAProject.Layout.Pages"
    mc:Ignorable="d"
    Background="White">


    <StackPanel Grid.Row="1">
        <StackPanel Orientation="Horizontal" Spacing="10">
            <views:AttributPage Mode="AttributeTrait" Trait="{x:Bind viewModel.Trait}"/>
            <views:AttributPage Mode="ValueTrait" Trait="{x:Bind viewModel.Trait}"/>
            <views:AttributPage Mode="ResourceTrait" Trait="{x:Bind viewModel.Trait}"/>
            <Button x:Name="XAML_ProbeKlugheit" Background="LightGray" BorderBrush="Green" BorderThickness="1" Click="Button_Click">
                <TextBlock Foreground="Black" FontFamily="French Script MT" FontSize="18">KL</TextBlock>
            </Button>
        </StackPanel>
    </StackPanel>
</Page>
