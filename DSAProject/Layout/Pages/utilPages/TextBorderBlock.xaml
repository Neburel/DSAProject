<Page
    x:Class="DSAProject.Layout.Pages.utilPages.TextBorderBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Border BorderBrush="Gray" BorderThickness="1, 1, 1, 1">
        <TextBlock Foreground="White" TextAlignment="Center" HorizontalTextAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" HorizontalAlignment="Center" FontFamily="French Script MT" FontSize="20" Text="{x:Bind viewModel.Text, Mode=TwoWay}"></TextBlock>
    </Border>
</Page>
